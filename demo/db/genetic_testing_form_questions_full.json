  "sections": [
    {
      "section_name": "Member Information",
      "questions": [
        {
          "id": "mi1",
          "question": "Member ID #",
          "type": "text",
          "required": true
        },
        {
          "id": "mi2",
          "question": "DOB",
          "type": "date",
          "required": true
        },
        {
          "id": "mi3",
          "question": "Member Name (Last, First)",
          "type": "text",
          "required": true
        },
        {
          "id": "mi4",
          "question": "Address",
          "type": "text",
          "required": true
        },
        {
          "id": "mi5",
          "question": "City, State, Zip",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "section_name": "Requested Testing",
      "questions": [
        {
          "id": "q1",
          "question": "Test Name:",
          "type": "text",
          "required": true
        },
        {
          "id": "q2",
          "question": "Date of Service:",
          "type": "date",
          "required": true
        },
        {
          "id": "q3",
          "question": "Type of Test (e.g., mutation panel, full gene sequencing, gene panel, deletion/duplication):",
          "type": "text",
          "required": true,
          "placeholder": "Enter type of test..."
        },
        {
          "id": "q4",
          "question": "Note: Requests for testing panels including, but not limited to, multiple genes or multiple conditions, and in cases where a tiered approach/ method is clinically available, are covered only for the number of genes or tests deemed medically necessary to establish a diagnosis.",
          "type": "statement",
          "required": false
        },
        {
          "id": "q5",
          "question": "Gene mutation being tested for:",
          "type": "text",
          "required": true,
          "placeholder": "Enter gene mutation..."
        },
        {
          "id": "q6",
          "question": "Diagnosis (ICD-10 CM) code(s) to support request for genetic testing:",
          "type": "text",
          "required": true,
          "placeholder": "Enter ICD-10 CM code(s)..."
        },
        {
          "id": "q7",
          "question": "Please list all CPT codes with requested units.",
          "type": "text",
          "required": true,
          "placeholder": "Enter CPT codes and units..."
        },
        {
          "id": "q8",
          "question": "Is the testing being ordered by a physician, advanced practice registered nurse (APRN), or certified nurse midwife (CNM) with expertise in clinical genetics or in the treatment of the targeted disease?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "No",
            "question": "If no, please explain:",
            "type": "text_area"
          }
        },
        {
          "id": "q9",
          "question": "Will genetic counseling be performed prior to and post-testing?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "No",
            "question": "If no, please explain:",
            "type": "text_area"
          }
        },
        {
          "id": "q10",
          "question": "Has a specific mutation or set of mutations been identified and broadly accepted by credible medical societies to be reliably associated with the condition or defect?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true
        },
        {
          "id": "q11",
          "question": "Can the genetic disorder be diagnosed or ruled out through means other than genetic testing (e.g., clinical examination, imaging, laboratory testing, or other testing)?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "If yes, please describe:",
            "type": "text_area"
          }
        },
        {
          "id": "q12",
          "question": "Has this test been performed previously?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "If yes, please explain why repeat testing is medically necessary:",
            "type": "text_area"
          }
        },
        {
          "id": "q13",
          "question": "What is the specific reason why the requested genetic test is being ordered for the individual? As part of this explanation, please include the algorithm/evidence-based clinical guidelines that were used to aid in your decision making (e.g., NCCN GuidelinesÂ®).",
          "type": "text_area",
          "required": true,
          "placeholder": "Please provide detailed explanation including clinical guidelines used..."
        },
        {
          "id": "q14",
          "question": "List all examinations, laboratory tests, imaging, and diagnostic studies that have been performed as part of the evaluation of the individual. Please attach results.",
          "type": "text_area",
          "required": true,
          "placeholder": "List all tests and studies performed..."
        }
      ]
    },
    {
      "section_name": "Clinical Presentation",
      "questions": [
        {
          "id": "cp1",
          "question": "Does the individual exhibit clinical features of the mutation in question?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please attach medical record documentation.",
            "type": "file_upload"
          }
        },
        {
          "id": "cp2",
          "question": "Is the individual at direct risk of inheriting a genetic mutation?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please attach medical record documentation.",
            "type": "file_upload"
          }
        },
        {
          "id": "cp3",
          "question": "Is the individual a prospective parent and the fetus would be at high risk for a specific inheritable disease or defect and outcome of testing is required to determine carrier status of inherited disorders and to guide subsequent reproductive decisions?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please attach medical record documentation.",
            "type": "file_upload"
          }
        }
      ]
    },
    {
      "section_name": "History",
      "questions": [
        {
          "id": "h1",
          "question": "Has less intensive genetic testing been completed?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "List previous testing below and attach results:",
            "type": "table",
            "columns": ["Test", "Date of Testing", "Mutation Identified?", "Specific Mutation Identified"],
            "rows": 3
          }
        },
        {
          "id": "h2",
          "question": "Is there a personal history of this diagnosis?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "List history of related diagnoses/disorders:",
            "type": "table",
            "columns": ["Diagnosis", "Age at Time of Diagnosis"],
            "rows": 3
          }
        },
        {
          "id": "h3",
          "question": "Is there a family history of this diagnosis or related disorders?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "List history of related diagnoses/disorders below:",
            "type": "table",
            "columns": ["Relationship", "Maternal/Paternal", "Diagnosis", "Age at Time of Diagnosis", "Family Member Deceased?", "Was Genetic Testing Completed?", "Family Mutation (If known)?"],
            "rows": 4
          }
        },
        {
          "id": "h4",
          "question": "Does spouse/reproductive partner have a history of known disorder, related disorder, or family mutation?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please describe:",
            "type": "text_area"
          }
        },
        {
          "id": "h5",
          "question": "Does a previous child have a history of known disorder, related disorder, or family mutation?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please describe:",
            "type": "text_area"
          }
        }
      ]
    },
    {
      "section_name": "Medical Management",
      "questions": [
        {
          "id": "mm1",
          "question": "Will test results have a material impact on the treatment plan and lead to interventions and surveillance beyond what is typically recommended for individuals without the genetic mutation?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please describe:",
            "type": "text_area"
          }
        },
        {
          "id": "mm2",
          "question": "Will test results improve health outcomes for the individual?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please describe:",
            "type": "text_area"
          }
        },
        {
          "id": "mm3",
          "question": "Is the disease treatable or preventable?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please describe:",
            "type": "text_area"
          }
        },
        {
          "id": "mm4",
          "question": "Will the change in medical management result in a reduced risk of morbidity and/or mortality?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true
        },
        {
          "id": "mm5",
          "question": "Will the testing avoid or supplant additional testing?",
          "type": "radio",
          "options": ["Yes", "No"],
          "required": true,
          "follow_up": {
            "condition": "Yes",
            "question": "Please describe:",
            "type": "text_area"
          }
        }
      ]
